.log {
  padding-bottom: 30px;
  &-item {
    margin-top: 15px;
    background-color: #fff;
    box-shadow: 0 0 5px #333;
    border-radius: 10px;
    padding: 15px;
    &:first-child {
      margin-top: 0;
    }
    a {
      margin: 0 5px;
      color: rgb(29, 155, 240);
      text-decoration: underline;
    }
    h2 {
      color: #1E90FF;
      font-size: 16px;
      font-weight: 400;
      padding-bottom: 10px;
      border-bottom: 1px solid #1E90FF;
      display: flex;
      justify-content: space-between;
      align-items: center;
      span:first-child {
      }
      span:last-child {
      }
    }
    p {
      color: #333;
      padding-top: 10px;
      font-size: 14px;
      line-height: 1.5;
    }
  }
}